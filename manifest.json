{
  "manifest_version": 3,
  "name": "Synonym Reader",
  "version": "1.0",
  "description": "Highlight a word to hear its synonyms.",
  "permissions": ["activeTab", "scripting", "storage", "tts"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Synonym Reader"
  }
}
