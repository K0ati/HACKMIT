{
  "manifest_version": 3,
  "name": "HackMIT Dyslexia Curer v1.2",
  "version": "1.1",
  "description": "Toggle Comic Sans on any website.",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [ {"matches": ["<all_urls>"], "js": ["content.js"]  } ]
}
