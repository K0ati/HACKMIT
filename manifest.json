{
  "manifest_version": 3,
  "name": "Reed",
  "version": "2.5",
  "description": "Finalizing Pushes",
  "icons": {
    "16": "icons/icon16.png"
  },
  "permissions": ["scripting", "activeTab", "storage"], 
  "action": {
    "default_icon": {
      "16": "icons/icon16.png"

    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "storage", "scripting"]
}
