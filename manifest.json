{
  "manifest_version": 3,
  "name": "Comic Sans Everywhere",
  "version": "1.1",
  "description": "Toggle Comic Sans on any website.",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "HackMIT.html",
    "default_icon": "HackMIT.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
    "default_popup": "popup.html"
  }
}